<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<% if @post.user == current_user %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<% if=link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure? }%>
<%= link_to 'Back', posts_path %>
<% end %>
